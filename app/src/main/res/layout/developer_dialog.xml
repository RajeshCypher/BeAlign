<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/devCover"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/hits"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        app:civ_border_color="#fff"
        app:civ_border_width="5dp"
        android:id="@+id/devPic"
        android:layout_marginTop="-75dp"
        android:layout_below="@+id/devCover"
        android:layout_centerHorizontal="true"
        android:src="@drawable/rajesh"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <TextView
        android:textColor="#23283a"
        android:textSize="30sp"
        android:layout_below="@+id/devPic"
        android:layout_centerHorizontal="true"
        android:text="Rajeshkumar Reddy"
        android:id="@+id/devName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#23283a"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/devName"
        android:id="@+id/devSign"
        android:text="Android Developer / Web Developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:textColor="#23283a"
        android:textSize="17sp"
        android:text="Follow on"
        android:id="@+id/devSocialT"
        android:layout_below="@+id/devSign"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center_horizontal"
        android:id="@+id/devSocial"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/devSocialT"
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/devFacebook"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/github"
            android:background="@drawable/buttondeveloper"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <ImageButton
            android:id="@+id/devInsta"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/buttondeveloper"
            android:scaleType="centerCrop"
            android:src="@drawable/insta"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <ImageButton
            android:id="@+id/devTwitter"
            android:scaleType="centerCrop"
            android:src="@drawable/twitter"
            android:background="@drawable/buttondeveloper"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>

</RelativeLayout>