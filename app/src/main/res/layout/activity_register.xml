<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rajeshkumarreddy.bealign.RegisterActivity">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:id="@+id/topRL"
        android:background="#23283a"
        android:layout_width="match_parent"
        android:layout_height="300dp">

    </RelativeLayout>

    <RelativeLayout
        android:elevation="10dp"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-250dp"
        android:layout_below="@+id/topRL"
        android:id="@+id/bottomRL"
        android:background="@drawable/layoutborder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/txtHead"
            android:textColor="#000"
            android:textSize="40sp"
            android:text="Be Align"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtDesc"
            android:layout_centerHorizontal="true"
            android:textColor="#000"
            android:textSize="15sp"
            android:text="Everyone under one roof"
            android:layout_below="@+id/txtHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/txtDesc"
            android:id="@+id/easy"
            android:layout_centerHorizontal="true"
            android:text="Register and be under the roof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_centerHorizontal="true"
            android:digits="0123456789"
            android:maxLength="8"
            android:inputType="number"
            android:id="@+id/roll"
            android:layout_marginTop="20dp"
            android:hint="Register Number"
            android:layout_below="@+id/easy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_centerHorizontal="true"
            android:inputType="textPassword"
            android:id="@+id/pass1"
            android:layout_marginTop="10dp"
            android:hint="New Password"
            android:layout_below="@+id/roll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_centerHorizontal="true"
            android:inputType="textPassword"
            android:id="@+id/pass2"
            android:layout_marginTop="10dp"
            android:hint="Confirm Password"
            android:layout_below="@+id/pass1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/register"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/pass2"
            android:textColor="#fff"
            android:text="Register"
            android:background="@drawable/buttonstylepink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.wang.avi.AVLoadingIndicatorView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/pass2"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            app:indicatorColor="#fe104d"
            android:id="@+id/avi"
            app:indicatorName="SquareSpinIndicator"
            android:layout_width="50dp"
            android:layout_height="50dp" />


    </RelativeLayout>




</RelativeLayout>
