<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.rajeshkumarreddy.bealign.NewPostActivity">

    <TextView
        android:textColor="#000"
        android:textSize="20sp"
        android:id="@+id/Postto"
        android:text="Post to News Feed..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:layout_marginTop="10dp"
        android:id="@+id/NPImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Postto"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/select" />

    <EditText
        android:elevation="5dp"
        android:inputType="textCapWords|textCapSentences"
        android:padding="10dp"
        android:background="@drawable/new_post_backs"
        android:id="@+id/NPTitle"
        android:hint="Post Title..."
        android:layout_marginTop="20dp"
        android:layout_below="@+id/NPImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:elevation="5dp"
        android:padding="10dp"
        android:background="@drawable/new_post_backs"
        android:hint="Post Description..."
        android:id="@+id/NPDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NPTitle"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine|textCapWords|textCapSentences" />

    <Button
        android:elevation="5dp"
        android:textColor="#fff"
        android:background="@drawable/new_post_bbacks"
        android:textAllCaps="true"
        android:text="Post to feed"
        android:id="@+id/NPPost"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.wang.avi.AVLoadingIndicatorView
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:id="@+id/rotateBox"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:indicatorName="SquareSpinIndicator"
        app:indicatorColor="#23283a"
        android:layout_width="75dp"
        android:layout_height="75dp" />


</RelativeLayout>
