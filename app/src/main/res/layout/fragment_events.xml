<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.rajeshkumarreddy.bealign.EventsFragment">

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/eventsAVI"
        android:layout_gravity="center"
        app:indicatorColor="#23283a"
        app:indicatorName="SquareSpinIndicator"
        android:layout_width="75dp"
        android:layout_height="75dp" />

    <TextView
        android:id="@+id/eventsFetching"
        android:textSize="20sp"
        android:textColor="#000"
        android:text="Fetching Events..."
        android:layout_marginBottom="100dp"
        android:layout_gravity="bottom|center"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/eventRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</FrameLayout>
